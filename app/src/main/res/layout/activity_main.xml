<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="all"
            type="com.naimur978.bd_covid19_info.cardView.services.model.All" />
    </data>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="380dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangladesh Corona Situation"
                android:layout_marginLeft="15dp"
                android:paddingEnd="80dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button"
                android:layout_width="30dip"

                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/internet" />


        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="380dp"
            android:layout_gravity="center"
            android:background="@android:color/background_light"
            android:layout_height="410dp"
            android:layout_marginBottom="10dp"
             />


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="380dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                //---------------------------------

                <androidx.cardview.widget.CardView
                    android:elevation="10dp"
                    android:id="@+id/item1"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@+id/txt_message"

                    android:background="#F8F8F8"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/background_light"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="2dp"
                                android:text="Total Infected"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="15dp"
                                android:text="@{all.cases}"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/button1"
                            android:layout_width="match_parent"
                            android:elevation="10dp"
                            android:layout_height="match_parent"></FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item2"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@+id/txt_message"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="2dp"
                                android:text="Today Confirmed"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="15dp"
                                android:text="@{all.todayCases}"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item3"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_below="@+id/txt_message"
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="2dp"
                                android:text="Today Deaths"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="15dp"
                                android:text="@{all.todayDeaths}"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/button3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                //---------------------------------

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                //---------------------------------

                <androidx.cardview.widget.CardView
                    android:id="@+id/item4"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/txt_message"
                    android:layout_margin="10dp"
                    android:background="#935050"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="2dp"
                                android:text="Critical"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="15dp"
                                android:text="@{all.critical}"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/button4"
                            android:layout_width="match_parent"

                            android:layout_height="match_parent"></FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/item5"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/txt_message"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/secondary_text_dark_nodisable"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="2dp"
                                android:text="Infected Per Million"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="15dp"
                                android:text="@{all.casesPerOneMillion}"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/button5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ite6"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/txt_message"
                    android:layout_margin="10dp"
                    android:background="#FFFFFF"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/tab_indicator_text"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="2dp"
                                android:text="Deaths Per Million"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="15dp"
                                android:text="@{all.deathsPerOneMillion}"
                                android:textColor="#0E0E0E"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/button6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></FrameLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                //---------------------------------

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>